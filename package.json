{
  "$schema": "https://json.schemastore.org/package",
  "name": "rollup-plugin-postcss",
  "version": "3.0.1",
  "description": "Fork of egoist/rollup-plugin-postcss",
  "main": "./dist/esm/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "node": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "pnpm lint && jest",
    "test:cov": "pnpm lint && jest --coverage",
    "prebuild": "rimraf ./dist",
    "build": "rollup -c",
    "prebuild:types": "rimraf ./types",
    "build:types": "tsc && tsc-alias",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egoist/rollup-plugin-postcss.git"
  },
  "keywords": [
    "postcss",
    "rollup"
  ],
  "author": "EGOIST <0x142857@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/egoist/rollup-plugin-postcss/issues"
  },
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://github.com/egoist/rollup-plugin-postcss#readme",
  "devDependencies": {
    "@eslint/compat": "^1.2.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@swc/core": "^1.7.36",
    "@types/node": "^22.7.7",
    "@types/resolve": "^1.20.6",
    "@types/stylus": "^0.48.43",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.4.3",
    "eslint-plugin-perfectionist": "^3.9.1",
    "eslint-plugin-prettier": "^5.2.1",
    "fs-extra": "^11.2.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "less": "^4.2.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-summary": "^2.0.1",
    "rollup-plugin-swc3": "^0.12.1",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "sass": "^1.80.3",
    "stylus": "^0.64.0",
    "sugarss": "^4.0.1",
    "tsc-alias": "^1.8.10",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "concat-with-sourcemaps": "^1.1.0",
    "cssnano": "^7.0.6",
    "import-cwd": "^3.0.0",
    "import-sync": "^2.2.2",
    "p-queue": "^6.6.2",
    "pify": "^6.1.0",
    "postcss-load-config": "^6.0.1",
    "postcss-modules": "^6.0.0",
    "promise.series": "^0.2.0",
    "resolve": "^1.22.8",
    "rollup-pluginutils": "^2.8.2",
    "safe-identifier": "^0.4.2",
    "style-inject": "^0.3.0"
  },
  "peerDependencies": {
    "postcss": "8.x"
  },
  "xo": {
    "extends": "rem",
    "envs": [
      "jest"
    ],
    "rules": {
      "import/prefer-default-export": 0,
      "import/extensions": 0,
      "import/no-unassigned-import": 0,
      "@typescript-eslint/semi": 0,
      "eslint-comments/disable-enable-pair": 0,
      "promise/prefer-await-to-then": 0
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
